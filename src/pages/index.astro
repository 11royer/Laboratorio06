---
import Card from '../components/Card.tsx';
---

<style>
  .card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .card {
    width: 450px;
    height: 400px;
    border: 1px solid #0cf3eb;
    border-radius: 8px;
    padding: 16px;
    text-align: center;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
  }

  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 10%;
    margin-bottom: 14px;
  }

  .description {
    text-align: left;
  }

  h1 {
    font-size: 40px;
    font-family: sans-serif;
	text-align: center;
  }
</style>

<div class="card-container">
  <Card />
</div>